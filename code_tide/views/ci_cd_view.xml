<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_ci_cd_tree" model="ir.ui.view">
        <field name="name">devops.cicd.tree</field>
        <field name="model">devops.cicd</field>
        <field name="arch" type="xml">
            <tree name="Ci/Cd">
                <field name="name"/>
                <field name="github_status"/>
            </tree>
        </field>
    </record>

    <!-- Definición de la vista form personalizada para project.project -->
    <record id="view_ci_cd_form" model="ir.ui.view">
        <field name="name">devops.cicd.form</field>
        <field name="model">devops.cicd</field>
        <field name="arch" type="xml">
            <form string="Project Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="github_status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir las vistas tree y form -->
    <record id="action_ci_cd_tree" model="ir.actions.act_window">
        <field name="name">Ci/Cd</field>
        <field name="res_model">devops.cicd</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0), (0, 0, {'view_mode': 'tree', 'view_id': ref('code_tide.view_ci_cd_tree')}), (0, 0, {'view_mode': 'form', 'view_id': ref('code_tide.view_ci_cd_form')})]"/>
    </record>

    <!-- Menú para acceder a la nueva vista personalizada -->
    <menuitem id="menu_ci_cd_tree"
              name="DevOps"
              parent="project.menu_main_pm"
              action="action_ci_cd_tree"/>
</odoo>


