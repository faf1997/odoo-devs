<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de formulario para devops.cicd -->
    <record id="view_repository_path_form" model="ir.ui.view">
        <field name="name">devops.cicd.form</field>
        <field name="model">devops.cicd</field>
        <field name="arch" type="xml">
            <form string="Repository Path">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="github_status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista para devops.cicd -->
    <record id="view_repository_path_tree" model="ir.ui.view">
        <field name="name">devops.cicd.tree</field>
        <field name="model">devops.cicd</field>
        <field name="arch" type="xml">
            <tree string="Repository Paths">
                <field name="name"/>
                <field name="github_status"/>
            </tree>
        </field>
    </record>

    <!-- Acción para Repository Path -->
    <record id="action_repository_path" model="ir.actions.act_window">
        <field name="name">Repository Paths</field>
        <field name="res_model">devops.cicd</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_repository_path_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first repository path
            </p>
        </field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_module_data_root" name="Module Data" sequence="20" web_icon="code_tide,static/description/icon.png"/>

    <!-- Menú de Repository Path bajo el menú principal -->
    <menuitem id="menu_repository_path_root" name="Repository Path" action="action_repository_path"  parent="menu_module_data_root" sequence="21" />

</odoo>


