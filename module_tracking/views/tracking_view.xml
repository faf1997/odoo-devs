<!-- module_tracking/views/tracking_view.xml -->
<odoo>
    <record id="view_module_tracking_form" model="ir.ui.view">
        <field name="name">module.tracking.form</field>
        <field name="model">module.tracking</field>
        <field name="arch" type="xml">
            <form string="Module Tracking">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_module_tracking_tree" model="ir.ui.view">
        <field name="name">module.tracking.tree</field>
        <field name="model">module.tracking</field>
        <field name="arch" type="xml">
            <tree string="Module Tracking">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_module_tracking_root" name="Module Tracking" sequence="10" action="action_module_tracking"/>

    <record id="action_module_tracking" model="ir.actions.act_window">
        <field name="name">Module Tracking</field>
        <field name="res_model">module.tracking</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new module tracking entry.
            </p>
        </field>
    </record>
</odoo>